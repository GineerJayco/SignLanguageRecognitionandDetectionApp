<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Row: Logo on the left, Title centered -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="183dp"
                android:layout_height="118dp"
                android:contentDescription="App Logo"
                android:src="@drawable/sign6" />

            <TextView
                android:id="@+id/about_title"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ABOUT THE APP"
                android:textColor="@color/teal_700"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/about_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:lineSpacingExtra="8dp"
            android:text="         This app detects real-time American Sign Language (ASL) letters using machine learning and computer vision. You can combine the detected letters to form words and have them spoken aloud in multiple languages. It also features an ASL dictionary to help you learn the alphabet and meanings of signs. For added fun and learning, the app includes a finger spelling game that lets users practice and improve their sign recognition skills."
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/about_limitation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Note: This app cannot detect moving sign language letters such as J and Z."
            android:textColor="@android:color/holo_red_dark"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Added Row for J and Z Sign Images -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:baselineAligned="false">

            <ImageView
                android:id="@+id/j_sign"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Sign for letter J"
                android:src="@drawable/j1"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/z_sign"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="Sign for letter Z"
                android:src="@drawable/z1"
                android:scaleType="centerInside" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
