<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.opencv.android.JavaCameraView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_Surface" />

    <!-- Top bar -->
    <LinearLayout
        android:id="@+id/top_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/change_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Buttons layout -->
    <LinearLayout
        android:id="@+id/bottom_vertical_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="@color/black">

        <!-- Add Button Centered -->
        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Add"
            android:drawableTop="@drawable/ic_add"
            android:drawablePadding="4dp"
            android:backgroundTint="@color/teal_700"
            android:textAllCaps="false"
            android:layout_gravity="center" />

        <!-- Other buttons below -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/txt_to_speech_button"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Speech"
                android:drawableTop="@drawable/ic_speech"
                android:drawablePadding="4dp"
                android:backgroundTint="@color/teal_700"
                android:textAllCaps="false"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/clear_button"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Clear"
                android:drawableTop="@drawable/ic_clear"
                android:drawablePadding="4dp"
                android:backgroundTint="@color/teal_700"
                android:textAllCaps="false"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/add_space_button"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Space"
                android:drawableTop="@drawable/ic_space"
                android:drawablePadding="4dp"
                android:backgroundTint="@color/teal_700"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
