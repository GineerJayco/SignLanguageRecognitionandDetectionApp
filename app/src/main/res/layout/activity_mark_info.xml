<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    android:padding="24dp">

    <!-- App Logo on the top-left corner -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="201dp"
        android:layout_height="126dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="App Logo"
        android:src="@drawable/sign6" />

    <!-- Developer Info Container (Centered) -->
    <LinearLayout
        android:id="@+id/center_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Centered Profile Image -->

        <!-- Name -->
        <ImageView
            android:id="@+id/mark_profile_image"
            android:layout_width="135dp"
            android:layout_height="141dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/circle_background"
            android:scaleType="centerCrop"
            android:src="@drawable/dev1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark Jayco Jamila"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Short Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Mark is one of the developers of this app. He specializes in Android development, machine learning, and computer vision. He is passionate in making a mobile application and also projects related to software and hardware."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- Contact Info Section -->
    <LinearLayout
        android:id="@+id/contact_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/center_info"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📧 markjayco.jamila@bisu.edu.ph"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <!-- Phone -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="📞 +63 927 581 6537"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <!-- Education -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="🎓 BS in Computer Engineering"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <!-- Other Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="📍 School: Bohol Island State University-Main Campus"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>
