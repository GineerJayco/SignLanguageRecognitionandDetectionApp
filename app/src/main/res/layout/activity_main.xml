<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background2"
    android:gravity="center_horizontal">

    <!-- App Logo -->

    <!-- Combine Letter Button -->

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="355dp"
        android:layout_height="165dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:contentDescription="App Logo"
        android:src="@drawable/sign6" />

    <Button
        android:id="@+id/combine_letter_button"
        android:layout_width="178dp"
        android:layout_height="86dp"
        android:layout_below="@id/app_logo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/teal_700"
        android:drawableLeft="@drawable/combine"
        android:paddingLeft="12dp"
        android:text="Real-Time \nDetection"
        android:textAllCaps="false" />

    <!-- User's Manual Button -->

    <!-- About the App Button -->
    <Button
        android:id="@+id/users_manual_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/combine_letter_button"
        android:layout_alignStart="@id/combine_letter_button"
        android:layout_marginStart="75dp"
        android:layout_marginTop="13dp"
        android:backgroundTint="@color/teal_700"
        android:drawableLeft="@drawable/dictionary"
        android:paddingLeft="20dp"
        android:text="ASL Dictionary"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/about_app_button"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_below="@id/app_logo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/teal_700"
        android:drawableLeft="@drawable/info"
        android:paddingLeft="12dp"
        android:text="About The\nApp"
        android:textAllCaps="false" />

    <!-- Fingerspelling Game Button -->

    <!-- "THE DEVELOPERS" Label -->

    <Button
        android:id="@+id/fingerspelling_game_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/about_app_button"
        android:layout_alignEnd="@id/about_app_button"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/teal_700"
        android:drawableLeft="@drawable/game"
        android:paddingLeft="40dp"
        android:text="Fingerspelling Game"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/developers_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/users_manual_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="THE DEVELOPERS"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Developer Section -->
    <LinearLayout
        android:id="@+id/developers_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/developers_label"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Mark -->
        <LinearLayout
            android:id="@+id/dev_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mark_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:src="@drawable/dev1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Mark Jayco Jamila"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Winmark -->
        <LinearLayout
            android:id="@+id/dev_winmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/winmark_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:src="@drawable/dev2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Winmark Cuyno"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
